# Mute Master
"/usr/bin/amixer -q sset Master toggle"
	XF86AudioMute

# Increase Volume
"/usr/bin/amixer set Master 5%+"
	XF86AudioRaiseVolume

# Lower Volume
"/usr/bin/amixer set Master 5%-"
	XF86AudioLowerVolume

# Increase Brightness
"/usr/bin/light -A 2"
  XF86MonBrightnessUp

# Lower Brighness
"/usr/bin/light -U 2"
  XF86MonBrightnessDown
