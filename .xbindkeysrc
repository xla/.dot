# Mute Master
"/usr/bin/pactl set-sink-mute @DEFAULT_SINK@ toggle"
	XF86AudioMute

# Increase Volume
"/usr/bin/pactl set-sink-volume @DEFAULT_SINK@ +1000"
	XF86AudioRaiseVolume

# Lower Volume
"/usr/bin/pactl set-sink-volume @DEFAULT_SINK@ -1000"
	XF86AudioLowerVolume

# Mute Mic
"/usr/bin/pactl set-source-mute @DEFAULT_SOURCE@ toggle"
  XF86AudioMicMute

"/usr/bin/playerctl play-pause"
  XF86AudioPlay

"/usr/bin/playerctl next"
  XF86AudioNext

"/usr/bin/playerctl previous"
  XF86AudioPrev

# Increase Brightness
"/usr/bin/light -A 2"
  XF86MonBrightnessUp

# Lower Brighness
"/usr/bin/light -U 2"
  XF86MonBrightnessDown
