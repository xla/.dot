# Mute Master
"/usr/bin/amixer -q sset Master toggle"
  XF86AudioMute

# Increase Volume
"/usr/bin/amixer set Master 5%+"
  XF86AudioRaiseVolume

# Lower Volume
"/usr/bin/amixer set Master 5%-"
  XF86AudioLowerVolume

"/usr/bin/playerctl play-pause"
  XF86AudioPlay

"/usr/bin/playerctl next"
  XF86AudioNext

"/usr/bin/playerctl previous"
  XF86AudioPrev

# Increase Brightness
"/usr/bin/light -A 2"
  XF86MonBrightnessUp

# Lower Brighness
"/usr/bin/light -U 2"
  XF86MonBrightnessDown
